class Solution:
    def isValid(self, s: str) -> bool:
        stack = []
        bracket_map = {')': '(', '}': '{', ']': '['}
        for ch in s:
            if ch in bracket_map.values():  # Opening bracket
                stack.append(ch)
            elif ch in bracket_map:  # Closing bracket
                if not stack or stack.pop() != bracket_map[ch]:
                    return False
            else:
                return False  # Invalid character (not a bracket)
        return len(stack) == 0
